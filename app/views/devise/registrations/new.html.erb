<h2>crear cuenta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="from-control">
    <%= f.label :email,"correo electronico" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "from-control" %>
  </div>

  <div class="from-control">
    <%= f.label :password, "contraseÃ±a" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="from-control">
    <%= f.label :password_confirmation, "confirmar contraseÃ±a" %>
    <%= f.password_field :password_confirmation  class: "from-control" %>
  </div>

  <div class="actions">
    <%= f.submit "crear cuenta", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
